# EditorConfig is awesome: https://EditorConfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true

[*.{cjs,js,mjs,ts}]
block_comment_start = /*
block_comment = *
block_comment_end = */

[*.{tmLanguage,yml,yaml}]
indent_style = space

[*.md]
trim_trailing_whitespace = false
