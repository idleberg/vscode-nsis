{
  "ModernUI": {
    "body": [
      "# Scaffolding by https://github.com/idleberg/sublime-nsis",
      "",
      "# Includes ---------------------------------",
      "!include \"MUI2.nsh\"",
      "",
      "# Settings ---------------------------------",
      "Name \"${1:installer_name}\"",
      "OutFile \"${2:${1}}.exe\"",
      "RequestExecutionLevel ${3:admin}",
      "Unicode true",
      "InstallDir \"\\$PROGRAMFILES\\\\${4:${1}}\"",
      "",
      "# Pages ------------------------------------",
      "!insertmacro MUI_PAGE_COMPONENTS ",
      "!insertmacro MUI_PAGE_DIRECTORY",
      "!insertmacro MUI_PAGE_INSTFILES",
      "",
      "# Languages --------------------------------",
      "!insertmacro MUI_LANGUAGE \"${5:English}\"",
      "",
      "# Functions -------------------------------",
      "$0",
      "",
      "# Sections ---------------------------------",
      "Section \"${6:section}\" ${7:${6:section}_INDEX}",
      "",
      "\t${8:# your code here}",
      "",
      "SectionEnd",
      "",
      "# Descriptions -----------------------------",
      "LangString DESC_${7} \\${LANG_${5:ENGLISH}} \"${9:section_description}\"",
      "",
      "!insertmacro MUI_FUNCTION_DESCRIPTION_BEGIN",
      "\t!insertmacro MUI_DESCRIPTION_TEXT \\${${7}} \\$(DESC_${7})",
      "!insertmacro MUI_FUNCTION_DESCRIPTION_END"
    ],
    "description": "Creates a Modern UI installer template",
    "prefix": "scaffold:ModernUI"
  }
}
