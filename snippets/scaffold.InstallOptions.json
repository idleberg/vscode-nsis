{
  "InstallOptions": {
    "body": [
      "# Scaffolding by https://github.com/idleberg/vscode-nsis",
      "",
      "# Settings ---------------------------------",
      "Name \"${1:installer_name}\"",
      "OutFile \"${2:${1:installer_name}}.exe\"",
      "RequestExecutionLevel ${3:user}",
      "Unicode true",
      "InstallDir \"\\$PROGRAMFILES\\\\${4:${1:installer_name}}\"",
      "",
      "# Includes ---------------------------------",
      "ReserveFile \"\\${NSISDIR}\\\\Plugins\\\\InstallOptions.dll\"",
      "ReserveFile \"${5:\\${NSISDIR\\}\\\\Examples\\\\InstallOptions\\\\test}.ini\"",
      "",
      "# Pages ------------------------------------",
      "Page custom \"${6:iopage}\" \"${7:${6:iopage}_validation}\" \": ${8:iopage_caption}\"",
      "Page components",
      "Page directory",
      "Page instfiles",
      "",
      "# Functions --------------------------------",
      "Function .onInit",
      "",
      "\tInitPluginsDir",
      "\tFile \"/oname=\\$PLUGINSDIR\\\\${9:ioFile}.ini\" \"${5:\\${NSISDIR\\}\\\\Examples\\\\InstallOptions\\\\test}.ini\"",
      "",
      "FunctionEnd",
      "",
      "Function \"${6:iopage}\"",
      "",
      "\tPush \\$R0",
      "\tInstallOptions::dialog \"\\$PLUGINSDIR\\\\${9:ioFile}.ini\"",
      "\tPop \\$R0",
      "",
      "FunctionEnd",
      "",
      "Function \"${7:${6:iopage}_validation}\"",
      "",
      "\t${10:# your code here}",
      "",
      "FunctionEnd$0",
      "",
      "# Sections ---------------------------------",
      "Section \"${11:section_name}\" ${12:section_index}",
      "",
      "\t${13:# your code here}",
      "",
      "SectionEnd"
    ],
    "description": "Creates an installer template with InstallOptions support",
    "prefix": "scaffold:InstallOptions"
  }
}
